{
  "name": "chat-project",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "prestart": "npm run build",
    "start": "cross-env DOTENV_CONFIG_PATH=./src/config/prod.env node -r dotenv/config dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" -c .eslintrc.js --fix",
    "format": "prettier \"src/**/*.{ts,tsx}\" --write",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "test:coverage": "cross-env DOTENV_CONFIG_PATH=./src/config/test.env jest --coverage",
    "test:watch": "cross-env DOTENV_CONFIG_PATH=./src/config/test.env jest --watch"
  },
  "keywords": [],
  "author": "Mahmoud Elzoka && Eslam Khalefa",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.5",
    "@types/mongoose": "^5.7.32",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-jest": "^26.1.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^26.1.0",
    "mongoose": "^5.9.25"
  }
}
